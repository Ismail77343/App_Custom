 "css": "@media print {\n.tfooter{\n    \n    position: fixed;\n    bottom:0;\n}\n}\n\n\n.qr-code{\n    border: 4px solid #ab1d5c !important;\n    border-radius:20px;\n}\n.head_{\n   font-size:10px; \n}\nhr{\n    border-top: 3px solid #d1d8dd !important;\n    box-shadow: 2px 2px 4px 1px #ab1d5c;\n}\ntfoot{\n        background: white;\n    color: black !important;\n    font-weight: bold;\n}\ntfoot td{\n        color: black !important;\n\n}\n.flex {\n      display: flex;\n      justify-content: center;\n        direction: rtl;\n\n    }\n\n    .clm {\n      flex: 1 1 300px;\n\n      text-align: center;\n    }\n.invoice-heading {\n  margin: 0;\n}\ntable{\n    direction:rtl;\n}\n.ksa-invoice-table {\n  border: 1px solid #888a8e;\n  border-collapse: collapse;\n  width: 100%;\n  margin: 0px 0;\n  font-size: 10px;\n}\n\n.ksa-invoice-table.two-columns td:nth-child(2) {\n\n  direction: rtl;\n}\n.print-format th{\n    background:white !important;\n    color:black;\n}\n.ksa-invoice-table th {\n  border: 1px solid #888a8e;\n  max-width: 50%;\n  padding: 0px;\n}\n\n.ksa-invoice-table td {\n  padding: 0px;\n  border: 1px solid #888a8e;\n  max-width: 50%;\n}\n\n.ksa-invoice-table thead,\n.ksa-invoice-table tfoot {\n  text-transform: uppercase;\n}\n\n.qr-rtl {\n  direction: rtl;\n}\n\n.qr-flex{\n    display: flex;\n    justify-content: space-between;\n}",
 "custom_format": 1,
 "default_print_language": "en",
